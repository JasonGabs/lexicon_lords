<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New CrossWord:</h3>

    <form class="form new-crossword-form">
      <div class="form-group">
        <label for="crossword-name">crossword name:</label>
        <input class="form-input" type="text" id="crossword-name" name="crossword-name" />
      </div>
      <div class="form-group">
        <label for="crossword-desc">description:</label>
        <textarea class="form-input" id="crossword-desc" name="crossword-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if CrossSet.length}}
  <div class="col-md-6 crossword-list">
    <h3>Current Crosswords:</h3>

    {{#each CrossSet as |CrossSet|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/CrossSet/{{CrossSet.id}}">{{CrossSet.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{CrossSet.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
